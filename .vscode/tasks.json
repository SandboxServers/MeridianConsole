{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "dotnet build Dhadgar.sln -c Debug",
      "problemMatcher": "$msCompile"
    },
    {
      "label": "test",
      "type": "shell",
      "command": "dotnet test Dhadgar.sln -c Debug",
      "problemMatcher": "$msCompile"
    },
    {
      "label": "Run Scope (open browser)",
      "type": "process",
      "command": "dotnet",
      "args": [
        "run",
        "--project",
        "src/Dhadgar.Scope/Dhadgar.Scope.csproj"
      ],
      "isBackground": true,
      "problemMatcher": "$msCompile",
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "Now listening on: (https?://\\S+)",
        "uriFormat": "%s/dependencies"
      }
    }
  ]
}
