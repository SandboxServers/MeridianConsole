@using MudBlazor

<MudPaper Outlined="true" Class="pa-4">
    <MudText Typo="Typo.h6" Color="Color.Primary" Class="mb-2">@Title</MudText>
    <MudTable Items="Rows" Dense="true">
        <HeaderContent>
            <MudTh>Service</MudTh>
            <MudTh>Owner</MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd DataLabel="Service">@context.Key</MudTd>
            <MudTd DataLabel="Owner">@context.Value</MudTd>
        </RowTemplate>
    </MudTable>
</MudPaper>

@code {
    [Parameter] public string Title { get; set; } = string.Empty;
    [Parameter] public Dictionary<string, string> Services { get; set; } = new();

    private IEnumerable<KeyValuePair<string, string>> Rows => Services;
}
