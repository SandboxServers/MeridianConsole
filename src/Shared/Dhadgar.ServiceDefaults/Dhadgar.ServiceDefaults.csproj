<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <AssemblyName>Dhadgar.ServiceDefaults</AssemblyName>
    <RootNamespace>Dhadgar.ServiceDefaults</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <!-- Gives you WebApplication, IServiceCollection, health checks, etc. -->
