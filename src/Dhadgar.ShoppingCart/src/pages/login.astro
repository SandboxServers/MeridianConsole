---
import AuthLayout from '../layouts/AuthLayout.astro';
import ShopLoginPage from '../components/auth/ShopLoginPage';

// Build absolute callback URL so BetterAuth redirects back to this site
const callbackURL = new URL('/callback', Astro.url).toString();
---

<AuthLayout title="Sign In | Meridian Console">
  <ShopLoginPage client:load callbackURL={callbackURL} />
</AuthLayout>
