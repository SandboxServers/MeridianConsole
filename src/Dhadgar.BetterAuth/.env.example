# Server
PORT=5130

# Base URL (behind Gateway)
BETTER_AUTH_URL=https://meridianconsole.com/api/v1/betterauth

# Trusted origins (comma-separated)
BETTER_AUTH_TRUSTED_ORIGINS=https://meridianconsole.com,https://panel.meridianconsole.com

# PostgreSQL
DATABASE_URL=Host=localhost;Port=5432;Database=dhadgar;Username=dhadgar;Password=dhadgar

# Better Auth secret (used for internal signing)
BETTER_AUTH_SECRET=change-me

# Exchange token signing (ES256) - PEM PKCS8
EXCHANGE_TOKEN_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----
EXCHANGE_TOKEN_KID=betterauth-exchange
EXCHANGE_TOKEN_ISSUER=https://meridianconsole.com/api/v1/betterauth
EXCHANGE_TOKEN_AUDIENCE=https://meridianconsole.com/api/v1/identity/exchange

# Allowed client apps (comma-separated, optional)
BETTER_AUTH_CLIENT_APPS=panel,shop
