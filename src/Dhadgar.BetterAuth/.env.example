# Server
PORT=5130

# Secrets Service URL (REQUIRED - all secrets loaded from here)
# The Secrets Service is the "dispersing officer" that controls access to Key Vault
SECRETS_SERVICE_URL=http://localhost:5000

# Base URL (behind Gateway)
BETTER_AUTH_URL=https://meridianconsole.com/api/v1/betterauth

# Trusted origins (comma-separated)
BETTER_AUTH_TRUSTED_ORIGINS=https://meridianconsole.com,https://panel.meridianconsole.com,http://localhost:4321

# PostgreSQL connection (password loaded from Secrets Service)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DATABASE=dhadgar_platform
POSTGRES_USERNAME=dhadgar

# Exchange token configuration
EXCHANGE_TOKEN_AUDIENCE=https://meridianconsole.com/api/v1/identity/exchange
EXCHANGE_TOKEN_ISSUER=https://meridianconsole.com/api/v1/betterauth
EXCHANGE_TOKEN_KID=betterauth-exchange-v1

# Allowed client apps (comma-separated)
BETTER_AUTH_CLIENT_APPS=panel,shop

# ============================================================================
# SECRETS LOADED FROM SECRETS SERVICE (do not set these manually)
# ============================================================================
# BetterAuth core secrets:
#   BETTER_AUTH_SECRET         -> betterauth-secret
#   EXCHANGE_TOKEN_PRIVATE_KEY -> betterauth-exchange-private-key
#
# Infrastructure secrets:
#   postgres-password          -> Used to build DATABASE_URL
#
# OAuth provider secrets (all loaded automatically):
#   OAUTH_FACEBOOK_APP_ID, OAUTH_FACEBOOK_APP_SECRET
#   OAUTH_GOOGLE_CLIENT_ID, OAUTH_GOOGLE_CLIENT_SECRET
#   OAUTH_DISCORD_CLIENT_ID, OAUTH_DISCORD_CLIENT_SECRET
#   OAUTH_TWITCH_CLIENT_ID, OAUTH_TWITCH_CLIENT_SECRET
#   OAUTH_GITHUB_CLIENT_ID, OAUTH_GITHUB_CLIENT_SECRET
#   OAUTH_APPLE_CLIENT_ID, OAUTH_APPLE_CLIENT_SECRET
#   OAUTH_MICROSOFT_CLIENT_ID, OAUTH_MICROSOFT_CLIENT_SECRET
