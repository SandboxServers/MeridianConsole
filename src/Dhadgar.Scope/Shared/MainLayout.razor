@inherits LayoutComponentBase

<div class="min-h-screen bg-gradient-to-b from-slate-950 via-slate-950 to-black text-white">
    <div class="mx-auto w-full px-4 py-6 2xl:px-8">
        <!-- Mobile top bar -->
        <div class="mb-4 flex items-center justify-between rounded-2xl border border-white/10 bg-white/5 p-4 lg:hidden">
            <a href="/" class="block">
                <div class="text-sm text-white/60">Meridian Console</div>
                <div class="text-xl font-bold tracking-tight">Scope</div>
            </a>

            <button class="inline-flex items-center justify-center rounded-xl border border-white/10 bg-white/5 px-3 py-2 text-sm hover:bg-white/10"
                    @onclick="ToggleSidebar"
                    aria-label="Open menu">
                ☰
            </button>
        </div>

        <div class="flex flex-col gap-4 lg:flex-row">
            <!-- Desktop sidebar -->
            <aside class="hidden lg:block lg:w-80">
                <div class="sticky top-6">
                    <ScopeSidebar />
                </div>
            </aside>

            <main class="min-w-0 flex-1">
                @Body
            </main>
        </div>
    </div>

    <!-- Mobile drawer sidebar -->
    <div class="@($"fixed inset-0 z-50 lg:hidden {( _sidebarOpen ? "" : "pointer-events-none" )}")">
        <div class="@($"absolute inset-0 bg-black/60 transition-opacity duration-200 {( _sidebarOpen ? "opacity-100" : "opacity-0" )}")"
             @onclick="CloseSidebar"></div>

        <aside class="@($"absolute left-0 top-0 h-full w-80 max-w-[85vw] overflow-y-auto border-r border-white/10 bg-slate-950/90 p-4 shadow-2xl backdrop-blur transition-transform duration-200 {( _sidebarOpen ? "translate-x-0" : "-translate-x-full" )}")">
            <div class="flex items-center justify-between">
                <div class="text-sm text-white/60">Menu</div>
                <button class="rounded-xl border border-white/10 bg-white/5 px-3 py-2 text-sm hover:bg-white/10"
                        @onclick="CloseSidebar"
                        aria-label="Close menu">
                    ✕
                </button>
            </div>

            <div class="mt-4">
                <ScopeSidebar OnNavigate="CloseSidebar" />
            </div>
        </aside>
    </div>
</div>

@code {
    private bool _sidebarOpen;

    private void ToggleSidebar() => _sidebarOpen = !_sidebarOpen;
    private Task CloseSidebar()
    {
        _sidebarOpen = false;
        return Task.CompletedTask;
    }
}
