@page "/notfound"

<PageTitle>Not Found</PageTitle>

<MudPaper Class="rounded-2xl border border-white/10 bg-white/5 p-6" Elevation="0">
    <MudText Typo="Typo.h4" Class="font-bold">Page not found</MudText>
    <MudText Typo="Typo.body1" Class="mt-2" Style="color: rgba(255,255,255,0.7);">
        The page you requested does not exist.
    </MudText>
    <MudButton Href="/"
               Variant="Variant.Filled"
               Color="Color.Primary"
               Class="mt-4 rounded-xl font-semibold"
               Style="text-transform: none;">
        Back to home
    </MudButton>
</MudPaper>
