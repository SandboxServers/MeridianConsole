# Alternative: Publish Helm Charts to GitHub Container Registry (OCI)
# This is an EXAMPLE workflow - rename to .yml to enable it
# OCI publishing requires Helm 3.8+ and different installation syntax

name: Publish Helm Charts to GHCR (OCI)

on:
  push:
    branches:
      - main
    paths:
      - 'deploy/kubernetes/helm/meridian-console/**'
  release:
    types: [published]
  workflow_dispatch:

permissions:
  contents: read
  packages: write

jobs:
  publish-oci:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Install Helm
        uses: azure/setup-helm@v4
        with:
          version: '3.13.0'

      - name: Add Bitnami repository
        run: |
          helm repo add bitnami https://charts.bitnami.com/bitnami
          helm repo update

      - name: Update chart dependencies
        run: |
          cd deploy/kubernetes/helm/meridian-console
          helm dependency update

      - name: Lint Helm chart
        run: |
          cd deploy/kubernetes/helm
          helm lint meridian-console

      - name: Login to GitHub Container Registry
        run: |
          echo "${{ secrets.GITHUB_TOKEN }}" | helm registry login ghcr.io -u ${{ github.actor }} --password-stdin

      - name: Package and Push to GHCR
        run: |
          cd deploy/kubernetes/helm

          # Package the chart
          helm package meridian-console

          # Get the chart version
          CHART_VERSION=$(grep '^version:' meridian-console/Chart.yaml | awk '{print $2}')
          CHART_FILE="meridian-console-${CHART_VERSION}.tgz"

          # Push to GHCR as OCI artifact
          helm push "$CHART_FILE" oci://ghcr.io/${{ github.repository_owner }}

          echo "Published meridian-console:${CHART_VERSION} to GHCR"

      - name: Create release summary
        run: |
          CHART_VERSION=$(grep '^version:' deploy/kubernetes/helm/meridian-console/Chart.yaml | awk '{print $2}')
          REPO_LOWER=$(echo "${{ github.repository_owner }}" | tr '[:upper:]' '[:lower:]')

          echo "## ðŸ“¦ Helm Chart Published to GHCR (OCI)" >> $GITHUB_STEP_SUMMARY
          echo "" >> $GITHUB_STEP_SUMMARY
          echo "**Chart Version:** \`$CHART_VERSION\`" >> $GITHUB_STEP_SUMMARY
          echo "**Registry:** \`ghcr.io/${REPO_LOWER}\`" >> $GITHUB_STEP_SUMMARY
          echo "" >> $GITHUB_STEP_SUMMARY
          echo "### ðŸš€ Installation" >> $GITHUB_STEP_SUMMARY
          echo "" >> $GITHUB_STEP_SUMMARY
          echo '```bash' >> $GITHUB_STEP_SUMMARY
          echo "# Install directly from OCI registry (Helm 3.8+ required)" >> $GITHUB_STEP_SUMMARY
          echo "helm install meridian oci://ghcr.io/${REPO_LOWER}/meridian-console \\" >> $GITHUB_STEP_SUMMARY
          echo "  --version ${CHART_VERSION} \\" >> $GITHUB_STEP_SUMMARY
          echo "  --namespace meridian-system \\" >> $GITHUB_STEP_SUMMARY
          echo "  --create-namespace" >> $GITHUB_STEP_SUMMARY
          echo '```' >> $GITHUB_STEP_SUMMARY
          echo "" >> $GITHUB_STEP_SUMMARY
          echo "### ðŸ” Private Repository Access" >> $GITHUB_STEP_SUMMARY
          echo "" >> $GITHUB_STEP_SUMMARY
          echo "If this is a private repository, users need to authenticate:" >> $GITHUB_STEP_SUMMARY
          echo '```bash' >> $GITHUB_STEP_SUMMARY
          echo "# Login with GitHub PAT (requires read:packages scope)" >> $GITHUB_STEP_SUMMARY
          echo "echo \$GITHUB_TOKEN | helm registry login ghcr.io -u USERNAME --password-stdin" >> $GITHUB_STEP_SUMMARY
          echo '```' >> $GITHUB_STEP_SUMMARY
